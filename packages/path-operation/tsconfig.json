{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"UMD",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": [
    "src",
    "test"
  ]
}
